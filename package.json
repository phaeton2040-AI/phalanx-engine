{
  "name": "phalanx-engine",
  "version": "0.1.0",
  "private": true,
  "description": "A game-agnostic deterministic lockstep multiplayer engine with authentication, matchmaking, and command synchronization",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "test:server": "pnpm --filter phalanx-server test",
    "test:client": "pnpm --filter phalanx-client test",
    "test:watch": "pnpm -r test:watch",
    "dev:server": "pnpm --filter phalanx-server dev",
    "dev:client": "pnpm --filter phalanx-client dev",
    "dev:game": "pnpm --filter game-test dev",
    "dev:game-server": "pnpm --filter game-test-server dev",
    "build:game-server": "pnpm --filter game-test-server build",
    "deploy:babylon": "cd babylon-ecs && pnpm run deploy",
    "heroku-postbuild": "corepack enable && corepack prepare pnpm@10.6.0 --activate && pnpm install && pnpm --filter phalanx-math build && pnpm --filter phalanx-server build && pnpm --filter game-test-server build",
    "start": "node game-test-server/dist/main.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "keywords": [
    "multiplayer",
    "game-engine",
    "lockstep",
    "deterministic",
    "netcode",
    "socket.io",
    "matchmaking"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.6.0",
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "prettier": "^3.4.0",
    "typescript-eslint": "^8.20.0"
  }
}
